{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://zeropaper.github.io/naechste/schemas/naechste.json",
  "title": "naechste configuration",
  "description": "Configuration schema for naechste",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to the naechste configuration schema URL"
    },
    "rules": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "server_side_exports": { "$ref": "#/$defs/ruleConfig" },
        "component_nesting_depth": { "$ref": "#/$defs/ruleConfig" },
        "filename_style_consistency": { "$ref": "#/$defs/ruleConfig" },
        "file_organization": { "$ref": "#/$defs/ruleConfig" }
      },
      "default": {}
    }
  },
  "required": [],
  "$defs": {
    "ruleConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "severity": { "$ref": "#/$defs/severity" },
        "options": { "$ref": "#/$defs/ruleOptions" }
      },
      "default": {
        "severity": "warn",
        "options": {}
      }
    },
    "severity": {
      "type": "string",
      "enum": ["warn", "error"],
      "default": "warn",
      "description": "Severity level for the rule"
    },
    "ruleOptions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "max_nesting_depth": {
          "type": "integer",
          "minimum": 1,
          "default": 3,
          "description": "Maximum allowed folder nesting depth for components"
        },
        "filename_style": {
          "type": "string",
          "enum": ["kebab-case", "camel-case", "pascal-case", "snake-case"],
          "default": "kebab-case",
          "description": "Preferred casing for component filenames"
        },
        "file_organization_checks": {
          "type": "array",
          "items": { "$ref": "#/$defs/organizationCheck" },
          "default": [],
          "description": "Checks for file organization and companion file requirements"
        }
      },
      "default": {}
    },
    "organizationCheck": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "description": { "type": "string" },
        "match": { "$ref": "#/$defs/matchPattern" },
        "require": {
          "type": "array",
          "items": { "$ref": "#/$defs/requireKind" },
          "default": []
        },
        "when_imported_by": { "$ref": "#/$defs/whenImportedBy" },
        "enforce_location": { "$ref": "#/$defs/enforceLocation" }
      },
      "required": ["id", "match"]
    },
    "matchPattern": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "glob": { "type": "string" },
        "exclude_glob": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        }
      },
      "required": ["glob"]
    },
    "requireKind": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "kind": { "const": "sibling_exact" },
            "name": { "type": "string" }
          },
          "required": ["kind", "name"]
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "kind": { "const": "sibling_glob" },
            "glob": { "type": "string" }
          },
          "required": ["kind", "glob"]
        }
      ]
    },
    "whenImportedBy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "importer_glob": { "type": "string" },
        "import_path_matches": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        }
      },
      "required": ["importer_glob"]
    },
    "enforceLocation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "must_be_under": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        },
        "message": { "type": "string" }
      },
      "required": ["must_be_under"]
    }
  },
  "examples": [
    {
      "$schema": "https://zeropaper.github.io/naechste/schemas/naechste.json",
      "rules": {
        "server_side_exports": { "severity": "error" },
        "component_nesting_depth": {
          "severity": "warn",
          "options": { "max_nesting_depth": 5 }
        }
      }
    }
  ]
}
